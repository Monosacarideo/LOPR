Algoritmo "Área de um quadrado"

Var
// Seção de Declarações das variáveis 
   lado, area : real

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 

  escreval("Vamos calcular a área de um quadrado = Lado^2")

  escreval("Informe o valor de um dos lados do quadrado:")
  leia(lado)
  
  area <- lado^2
  
  escreval("A área do quadrado é", area)

Fimalgoritmo